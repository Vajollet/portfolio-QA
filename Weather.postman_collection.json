			"name": "[GET] Weather in Warsaw v1",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"let jsonData;\r",
							"\r",
							"try {\r",
							"    jsonData = pm.response.json();\r",
							"} catch (e) {\r",
							"    console.error(\"Test nieudany\", e);\r",
							"}\r",
							"\r",
							"pm.test(\"Weryfikacja kodu odpowiedzi - 200\", function() {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Miasto to Warsaw\", function () { \r",
							"    pm.expect(jsonData.name).to.eql(\"Warsaw\"); \r",
							"});\r",
							"\r",
							"pm.test(\"Kod kraju to PL\", function () {\r",
							"    pm.expect(jsonData.sys.country).to.eql(\"PL\");\r",
							"});\r",
							"\r",
							"pm.test(\"Temperatura w prawidłowym zakresie\", function () {\r",
							"    const temp = jsonData.main.temp;\r",
							"    pm.expect(temp).to.be.above(-50);\r",
							"    pm.expect(temp).to.be.below(60);\r",
							"});\r",
							"\r",
							"pm.test(\"Wilgotność w mieści się w zakresie 0–100%\", function () {\r",
							"    const humidity = jsonData.main.humidity;\r",
							"    pm.expect(humidity).to.be.within(0, 100);\r",
							"});\r",
							""
						],
